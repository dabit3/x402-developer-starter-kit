# Server Configuration
PORT=3000

# Payment Configuration
# The wallet address that will receive payments via the facilitator
PAY_TO_ADDRESS=0xYourWalletAddress

# Network Configuration
# Options: "base", "base-sepolia", "ethereum", "polygon", "polygon-amoy"
NETWORK=base-sepolia

# OpenAI Configuration
# Your OpenAI API key for AI processing
OPENAI_API_KEY=your_openai_api_key_here

# Test Client Configuration (optional - only needed for testing with payments)
# CLIENT_PRIVATE_KEY=your_test_wallet_private_key_here
# AGENT_URL=http://localhost:3000

# Optional: Facilitator configuration
# FACILITATOR_URL=https://your-custom-facilitator.com
# FACILITATOR_API_KEY=your_api_key_if_required

# Optional: Local (direct) settlement configuration
# SETTLEMENT_MODE=local
# PRIVATE_KEY=your_private_key_here
# RPC_URL=https://base-sepolia.g.alchemy.com/v2/your-api-key

# Optional: Custom network configuration (required if NETWORK is not built-in)
# ASSET_ADDRESS=0xTokenAddress
# ASSET_NAME=USDC
# EXPLORER_URL=https://explorer.your-network.org
# CHAIN_ID=84532

# Optional: Public service URL used in payment requirements
# SERVICE_URL=http://localhost:3000/process

# Optional: Debug logging
X402_DEBUG=true
